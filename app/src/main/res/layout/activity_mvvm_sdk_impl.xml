<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MvvmSdkImplActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.techun.demoemvttpax.utils.keyboard.CustomKeyboardEditText
                android:id="@+id/main_amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:textColor="@color/main_text"
                android:textSize="56sp"
                android:textStyle="bold"
                app:autoSize="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:xml="@xml/amount_keyboard"
                tools:text="$123.45" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/main_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentProgressBar"
        android:name="com.techun.demoemvttpax.utils.ProgressBarFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>